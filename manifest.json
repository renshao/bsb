{
    "name": "Web Stand",
    "version": "0.2",
    "description": "Put selected content on the web stand, so you can see it while switching away from current tab or even Chrome",
    "icons": {
        "16": "resources/icon48.png",
        "48": "resources/icon48.png",
        "128": "resources/icon48.png"
    },
    "background_page": "extension/background.html",
    "browser_action": {
        "default_title": "",
        "default_icon": "resources/logo.png",
        "default_popup": "extension/popup.html"
    },
    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs",
        "contextMenus",
        "notifications"
    ]
    
}
